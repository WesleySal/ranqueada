let dia = 5

switch(dia){
    case 1:
    console.log("domingo")
    break

    case 2:
    console.log("segunda")
    break

    case 3:
    console.log("terça")
    break

    case 4:
    console.log("quarta")
    break

    case 5:
    console.log("quinta")
    break

    case 6:
    console.log("sexta")
    break

    case 7:
    console.log("sabádo")
    break

    default:
    console.log("ERRO!")
}